<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera.CameraXActivity">
    <Button
        android:id="@+id/btn_atras"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        app:icon="@drawable/ic_back_white_keyboard_arrow_left_24"
        app:iconSize="40dp" />

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="PreviewArea"
        android:importantForAccessibility="no"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/orientation"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="100sp"
        android:textColor="#9999ff"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_camara_indiscreta"
        android:visibility="gone"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_camerax"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:visibility="gone"
            android:background="@drawable/round_button"
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_captura_foto"
            android:drawableTop="@drawable/ic_white_photo_camera_44"
            android:paddingTop="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </Button>
    </LinearLayout>
</RelativeLayout>